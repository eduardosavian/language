<project name="Simplex" basedir="." default="build">

    <!-- Define properties -->
    <property name="antlr4_path" location="libs/antlr4.jar"/>
    <property name="src.dir" location="src"/>
    <property name="build.dir" location="build"/>
    <property name="main.class" value="Simplex"/> <!-- Updated to Simplex -->

    <!-- Define classpath -->
    <path id="classpath">
        <pathelement location="${antlr4_path}"/>
        <pathelement path="${java.class.path}"/>
        <pathelement location="${build.dir}"/>
    </path>

    <!-- Compile task -->
    <target name="compile" depends="init, antlr">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" classpathref="classpath" debug="true" nowarn="true" fork="true">
            <compilerarg value="-Xlint:-deprecation"/>
        </javac>
    </target>

    <!-- Run task -->
    <target name="run" depends="compile">
        <java classname="${main.class}" classpathref="classpath">
            <arg value="${arg}"/> <!-- Pass the argument dynamically -->
        </java>
    </target>

    <!-- Clean task -->
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <!-- Initialize task -->
    <target name="init">
        <mkdir dir="${build.dir}"/>
    </target>

    <!-- Build task -->
    <target name="build" depends="clean, compile">
    </target>

    <!-- ANTLR task -->
    <target name="antlr">
        <exec executable="java">
            <arg value="-cp"/>
            <arg path="${antlr4_path}:${CLASSPATH}"/>
            <arg value="org.antlr.v4.Tool"/>
            <arg value="${src.dir}/SimplexLexer.g4"/>
            <arg value="${src.dir}/SimplexParser.g4"/>
        </exec>
    </target>

</project>
